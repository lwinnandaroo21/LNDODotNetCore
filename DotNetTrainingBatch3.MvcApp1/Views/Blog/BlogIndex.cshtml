@model List<BlogModel>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Blog Page";
    int count = 0;
}

<h4>Blog Page</h4>
<a href="/Blog/Create" class="btn btn-outline-success">New</a>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach(BlogModel item in Model)
        {
            <tr>
                <th>
                    <a href="/Blog/Edit/@item.BlogId" class="btn btn-warning">Edit</a>
                    <a href="/Blog/Delete/@item.BlogId" class="btn btn-danger">Delete</a>
                </th>
                <th scope="row">@(++count)</th>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
            </tr>
        }
       
    </tbody>
</table>
